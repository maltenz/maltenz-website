---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Content Manager">
  <!-- Decap CMS root -->
  <div id="nc-root" style="height: 100vh;"></div>

  <!-- ✅ Set CMS_MANUAL_INIT before loading Decap CMS -->
  <script is:inline>
    window.CMS_MANUAL_INIT = true;
  </script>

  <!-- Optional: Netlify Identity Widget (only needed if you're using identity login) -->
  <script
    src="https://identity.netlify.com/v1/netlify-identity-widget.js"
    defer
  ></script>
  <script is:inline defer>
    window.netlifyIdentity.on('login', () => { window.location.href = '/admin/'; });
    window.netlifyIdentity.init();
  </script>

  <!-- ✅ Decap CMS script -->
  <script
    src="https://unpkg.com/decap-cms@3.8.2/dist/decap-cms.js"
    defer
  ></script>
  <script is:inline>
    // Initialize CMS after successful Netlify Identity login
    window.netlifyIdentity.on('login', () => {
      CMS.init({ config: '/admin/config.yml' });
    });
  </script>
</Layout>
