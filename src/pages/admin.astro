---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Content Manager">
  <!-- Decap CMS root -->
  <div id="nc-root" style="height: 100vh;"></div>

  <!-- âœ… Manual init for Decap CMS + Netlify Identity login flow -->
  <script is:inline>
    window.CMS_MANUAL_INIT = true;
  </script>
  <script
    src="https://cdn.jsdelivr.net/npm/netlify-identity-widget@1.9.1/build/netlify-identity-widget.min.js"
    onload="
      netlifyIdentity.init();
      netlifyIdentity.on('init', user => { if (!user) netlifyIdentity.open(); });
      netlifyIdentity.on('login', () => { netlifyIdentity.close(); CMS.init({ config: '/admin/config.yml' }); });
    "
  ></script>
  <script src="https://cdn.jsdelivr.net/npm/decap-cms@3.8.2/dist/decap-cms.min.js" defer></script>
</Layout>
