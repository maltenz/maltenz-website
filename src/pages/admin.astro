---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Content Manager">
  <!-- Decap CMS root -->
  <div id="nc-root" style="height: 100vh;"></div>

  <!-- ✅ Set CMS_MANUAL_INIT before loading Decap CMS -->
  <script is:inline>
    window.CMS_MANUAL_INIT = true;
  </script>

  <!-- Optional: Netlify Identity Widget (only needed if you're using identity login) -->
  <script
    src="https://cdn.jsdelivr.net/npm/netlify-identity-widget@1.9.1/build/netlify-identity-widget.min.js"
    defer
  ></script>

  <!-- ✅ Decap CMS script -->
  <script
    src="https://cdn.jsdelivr.net/npm/decap-cms@3.8.2/dist/decap-cms.min.js"
    onload="CMS.init({ config: '/admin/config.yml' })"
    defer
  ></script>
</Layout>
