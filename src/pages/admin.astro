---
// CMS Admin Page - Client-side only
---

<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Content Manager</title>
</head>
<body>
  <div id="nc-root"></div>
  
  <!-- Include the script that builds the page and powers Decap CMS -->
  <script src="https://unpkg.com/decap-cms@^3.0.0/dist/decap-cms.js"></script>
  <script is:inline>
    // Ensure manual initialization only
    window.CMS_MANUAL_INIT = true;
    
    // Wait for CMS to be fully loaded
    window.addEventListener('load', function() {
      // Clear any existing config
      if (window.CMS) {
        const config = {
          backend: {
            name: 'github',
            repo: 'maltenz/maltenz-website',
            branch: 'main'
          },
          media_folder: 'public/images/uploads',
          public_folder: '/images/uploads',
          collections: [
            {
              name: 'blogposts',
              label: 'Blog Posts',
              folder: 'src/content/posts',
              create: true,
              slug: '{{slug}}',
              fields: [
                { label: 'Title', name: 'title', widget: 'string' },
                { label: 'Description', name: 'description', widget: 'text' },
                { label: 'Publish Date', name: 'publishDate', widget: 'datetime' },
                { label: 'Author', name: 'author', widget: 'string', required: false },
                { label: 'Featured Image', name: 'image', widget: 'image', required: false },
                { label: 'Tags', name: 'tags', widget: 'list', required: false },
                { label: 'Featured', name: 'featured', widget: 'boolean', default: false },
                { label: 'Body', name: 'body', widget: 'markdown' }
              ]
            },
            {
              name: 'hero',
              label: 'Hero Section',
              folder: 'src/content/hero',
              create: true,
              slug: 'main',
              extension: 'json',
              format: 'json',
              fields: [
                { label: 'Title', name: 'title', widget: 'string' },
                { label: 'Subtitle', name: 'subtitle', widget: 'string', required: false },
                { label: 'Description', name: 'description', widget: 'text' },
                { label: 'CTA Text', name: 'ctaText', widget: 'string', required: false },
                { label: 'CTA Link', name: 'ctaLink', widget: 'string', required: false },
                { label: 'Background Image', name: 'backgroundImage', widget: 'image', required: false },
                { label: 'Is Active', name: 'isActive', widget: 'boolean', default: true }
              ]
            }
          ]
        };

        console.log('Initializing CMS with config:', config);
        try {
          window.CMS.init({ config });
          console.log('CMS initialized successfully');
          
          // Simple save handler
          window.CMS.registerEventListener({
            name: 'postSave',
            handler: ({ entry }) => {
              console.log('Entry saved:', entry.toJS());
            }
          });
        } catch (error) {
          console.error('CMS initialization failed:', error);
        }
      } else {
        console.error('CMS not available');
      }
    });
  </script>
</body>
</html>
