---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Content Manager">
  <!-- Decap CMS root -->
  <div id="nc-root" style="height: 100vh;"></div>

  <!-- âœ… Manual init for Decap CMS + Netlify Identity login flow -->
  <script is:inline>
    window.CMS_MANUAL_INIT = true;
  </script>
  <!-- Load Netlify Identity widget -->
  <script
    src="https://cdn.jsdelivr.net/npm/netlify-identity-widget@1.9.1/build/netlify-identity-widget.min.js"
    defer
  ></script>
  <!-- Initialize Identity and CMS after widget loads -->
  <script is:inline defer>
    if (window.netlifyIdentity) {
      window.netlifyIdentity.init();
      window.netlifyIdentity.on('init', user => {
        if (!user) {
          window.netlifyIdentity.open();
        }
      });
      window.netlifyIdentity.on('login', () => {
        window.netlifyIdentity.close();
        CMS.init({ config: '/admin/config.yml' });
      });
    } else {
      console.error('Netlify Identity widget failed to load');
    }
  </script>
  <!-- Load Decap CMS script -->
  <script
    src="https://cdn.jsdelivr.net/npm/decap-cms@3.8.2/dist/decap-cms.min.js"
    onload="CMS.init({ config: '/admin/config.yml' })"
    defer
  ></script>
</Layout>
