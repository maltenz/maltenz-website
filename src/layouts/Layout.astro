  <body>
    <slot />

    <script>
      const win = window as any;

      if (win.netlifyIdentity) {
        win.netlifyIdentity.on('init', (user: any) => {
          console.log('[Netlify Identity] Initialized user:', user);

          if (!user) {
            win.netlifyIdentity.on('login', (loggedInUser: any) => {
              console.log('[Netlify Identity] Logged in user:', loggedInUser);
              document.location.href = '/admin/';
            });
          } else {
            console.log('[Netlify Identity] Already logged in:', user);
          }
        });

        win.netlifyIdentity.init();

        if (
          win.location.hash.includes('invite_token') ||
          win.location.hash.includes('recovery_token')
        ) {
          win.netlifyIdentity.open();
        }
      } else {
        console.warn('Netlify Identity not available on window');
      }
    </script>
